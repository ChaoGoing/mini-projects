############################
# 该环境变量用于单机运行
############################

# 对外访问端口（用于独立运行时的访问地址）
PORT=11002
# 请替换为强随机字符串以保证安全
SECRET=change_me_secure_secret

# 数据库连接（使用 docker-compose 中的 service 名称）
# 示例: mongodb://user:pass@127.0.0.1:27017/tailchat
MONGO_URL=mongodb://mongo:27017/tailchat

# 缓存/Transporter（指向 redis 服务）
REDIS_URL=redis://redis:6379/
TRANSPORTER=redis://redis:6379/

# 填写服务端可访问的接口地址（在浏览器/前端中使用）
API_URL=http://127.0.0.1:11000

# 文件存储（在 compose 中 minio 服务名为 minio）
MINIO_URL=minio:9000
MINIO_USER=tailchat
MINIO_PASS=com.msgbyte.tailchat

# SMTP 服务
# 示例: "Tailchat" example@163.com
SMTP_SENDER=
# 示例: smtp://username:password@smtp.example.com/?pool=true
SMTP_URI=

# 视频会议服务(optional) 不包含结尾的/
TAILCHAT_MEETING_URL=

# Admin 后台密码（请根据需要修改）
ADMIN_USER=tailchat
ADMIN_PASS=com.msgbyte.tailchat

# GETUI Push
GETUI_APPID=
GETUI_APPKEY=
GETUI_MASTERSECRET=

# Tianji
TIANJI_SCRIPT_URL=
TIANJI_WEBSITE_ID=
